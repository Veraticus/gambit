{
  "_comment": "Skill activation rules. Keywords are case-insensitive substring matches. Every match is mandatory â€” no priority tiers.",

  "debugging": {
    "keywords": ["bug", "broken", "failing", "error", "crash", "debug", "investigate"],
    "patterns": ["test.*fail", "doesn't work", "not working", "unexpected"]
  },

  "test-driven-development": {
    "keywords": ["tdd", "test first", "red green", "write test", "failing test", "test driven"],
    "patterns": ["implement.*with test", "test.*driven", "red.*green.*refactor", "write.*failing"]
  },

  "refactoring": {
    "keywords": ["refactor", "restructure", "reorganize", "clean up code"],
    "patterns": ["extract.*method", "move.*to.*class"]
  },

  "code-review": {
    "keywords": ["code review", "review my code", "look over my code", "review this pr"],
    "patterns": ["review.*code", "pr review"]
  },

  "brainstorming": {
    "keywords": ["design this", "architect", "how should I build", "what approach"],
    "patterns": ["best way to build", "how would you implement", "what approach.*for"]
  },

  "writing-plans": {
    "keywords": ["create plan", "write plan", "implementation plan", "task breakdown"],
    "patterns": ["plan.*implement", "break.*down.*task"]
  },

  "executing-plans": {
    "keywords": ["execute plan", "implement plan", "start implementing", "continue implementing"],
    "patterns": ["follow.*plan", "implement.*from plan", "next task"]
  },

  "parallel-agents": {
    "keywords": ["parallel investigation", "concurrent failures", "multiple independent failures"],
    "patterns": ["3\\+.*fail", "several.*broken.*independent"]
  },

  "verification": {
    "keywords": ["verify passing", "confirm tests pass", "validate completion"],
    "patterns": ["before.*commit", "ready.*merge", "is it done"]
  },

  "testing-quality": {
    "keywords": ["test quality", "audit tests", "tautological test", "coverage gaming", "weak assertions", "test effectiveness"],
    "patterns": ["test.*quality", "audit.*test", "coverage.*high.*bug"]
  },

  "task-refinement": {
    "keywords": ["refine tasks", "review plan quality", "strengthen tasks", "task quality"],
    "patterns": ["review.*task.*quality", "refine.*plan", "ready.*to implement"]
  },

  "finishing-branch": {
    "keywords": ["finish branch", "done with feature", "ready to merge"],
    "patterns": ["create.*pull request", "open.*pr"]
  }
}
